---
import {
	Card,
	CardContent,
	CardDescription,
	CardHeader,
	CardTitle,
} from "@/components/ui/card";

interface Props {
    className?: string;
    title: string;
    description: string;
}
const { className, title, description } = Astro.props;
---


<Card className={className}>
    <CardHeader>
        <CardTitle>{title}</CardTitle>
        <CardDescription>{description}</CardDescription>
    </CardHeader>
    <CardContent>
        <slot />
    </CardContent>
</Card>