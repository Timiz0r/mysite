root = true

[*]
end_of_line = crlf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
guidelines = 120,130

# aka anything with html
[{*.astro,*.md,*.mdx,*.jsx,*.tsx}]
indent_size = 2

[*.css]
indent_size = 2

[{*.yml,*.yaml}]
indent_size = 2

[{*.md,*.mdx}]
trim_trailing_whitespace = false
